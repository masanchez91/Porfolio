<svg width="800" height="500" viewBox="0 0 800 500" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0f172a"/>
      <stop offset="100%" style="stop-color:#1e293b"/>
    </linearGradient>
    <linearGradient id="primary" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#28a745"/>
      <stop offset="100%" style="stop-color:#20c997"/>
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="500" fill="url(#bg)"/>
  
  <!-- Title -->
  <rect x="40" y="40" width="720" height="60" rx="15" fill="#1e293b" stroke="#28a745" stroke-width="2"/>
  <text x="400" y="75" text-anchor="middle" fill="#28a745" font-family="Arial, sans-serif" font-size="24" font-weight="bold">Características de un MVP Exitoso</text>
  
  <!-- Central MVP Circle -->
  <circle cx="400" cy="250" r="80" fill="#1f2937" stroke="#28a745" stroke-width="3"/>
  <text x="400" y="245" text-anchor="middle" fill="#28a745" font-family="Arial, sans-serif" font-size="20" font-weight="bold">MVP</text>
  <text x="400" y="265" text-anchor="middle" fill="#94a3b8" font-family="Arial, sans-serif" font-size="14">Exitoso</text>
  
  <!-- Characteristic 1: Funcionalidad Core -->
  <rect x="50" y="140" width="200" height="80" rx="10" fill="#262626" stroke="#28a745" stroke-width="1"/>
  <circle cx="150" cy="160" r="8" fill="#28a745"/>
  <text x="150" y="175" text-anchor="middle" fill="#28a745" font-family="Arial, sans-serif" font-size="14" font-weight="bold">Funcionalidad Core</text>
  <text x="150" y="190" text-anchor="middle" fill="#94a3b8" font-family="Arial, sans-serif" font-size="12">Solo características</text>
  <text x="150" y="205" text-anchor="middle" fill="#94a3b8" font-family="Arial, sans-serif" font-size="12">esenciales</text>
  
  <!-- Characteristic 2: Feedback Rápido -->
  <rect x="550" y="140" width="200" height="80" rx="10" fill="#262626" stroke="#28a745" stroke-width="1"/>
  <circle cx="650" cy="160" r="8" fill="#28a745"/>
  <text x="650" y="175" text-anchor="middle" fill="#28a745" font-family="Arial, sans-serif" font-size="14" font-weight="bold">Feedback Rápido</text>
  <text x="650" y="190" text-anchor="middle" fill="#94a3b8" font-family="Arial, sans-serif" font-size="12">Validación de</text>
  <text x="650" y="205" text-anchor="middle" fill="#94a3b8" font-family="Arial, sans-serif" font-size="12">hipótesis</text>
  
  <!-- Characteristic 3: Escalabilidad -->
  <rect x="50" y="320" width="200" height="80" rx="10" fill="#262626" stroke="#28a745" stroke-width="1"/>
  <circle cx="150" cy="340" r="8" fill="#28a745"/>
  <text x="150" y="355" text-anchor="middle" fill="#28a745" font-family="Arial, sans-serif" font-size="14" font-weight="bold">Escalabilidad</text>
  <text x="150" y="370" text-anchor="middle" fill="#94a3b8" font-family="Arial, sans-serif" font-size="12">Arquitectura que</text>
  <text x="150" y="385" text-anchor="middle" fill="#94a3b8" font-family="Arial, sans-serif" font-size="12">permite crecimiento</text>
  
  <!-- Characteristic 4: Experiencia Completa -->
  <rect x="550" y="320" width="200" height="80" rx="10" fill="#262626" stroke="#28a745" stroke-width="1"/>
  <circle cx="650" cy="340" r="8" fill="#28a745"/>
  <text x="650" y="355" text-anchor="middle" fill="#28a745" font-family="Arial, sans-serif" font-size="14" font-weight="bold">Experiencia Completa</text>
  <text x="650" y="370" text-anchor="middle" fill="#94a3b8" font-family="Arial, sans-serif" font-size="12">Aunque mínima,</text>
  <text x="650" y="385" text-anchor="middle" fill="#94a3b8" font-family="Arial, sans-serif" font-size="12">debe satisfacer</text>
  
  <!-- Connecting lines -->
  <line x1="250" y1="180" x2="320" y2="220" stroke="#28a745" stroke-width="2"/>
  <line x1="550" y1="180" x2="480" y2="220" stroke="#28a745" stroke-width="2"/>
  <line x1="250" y1="360" x2="320" y2="320" stroke="#28a745" stroke-width="2"/>
  <line x1="550" y1="360" x2="480" y2="320" stroke="#28a745" stroke-width="2"/>
  
  <!-- Bottom message -->
  <rect x="100" y="440" width="600" height="30" rx="15" fill="#1f2937" stroke="#28a745" stroke-width="1"/>
  <text x="400" y="460" text-anchor="middle" fill="#28a745" font-family="Arial, sans-serif" font-size="14" font-weight="bold">Un MVP no es un producto mediocre, es el producto más simple que genera aprendizaje</text>
</svg> 