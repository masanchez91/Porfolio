---
import Layout from "@/layouts/Layout.astro"

import AboutMe from "@/components/AboutMe.astro"
import Briefcase from "@/components/icons/Briefcase.astro"
import CodeIcon from "@/components/icons/Code.astro"
import Experience from "@/components/Experience.astro"
import ProfileCheck from "@/components/icons/ProfileCheck.astro"
import Projects from "@/components/Projects.astro"
import Services from "@/components/Services.astro"
import ContactForm from "@/components/ContactForm.astro"
import Testimonials from "@/components/Testimonials.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import Hero from "@/components/Hero.astro"
---

<Layout
  title="The Holy Code - Agencia de Desarrollo | Donde las ideas se vuelven código"
  description="The Holy Code transforma lo imposible en producto digital. Agencia especializada en MVPs, aplicaciones web innovadoras y soluciones digitales únicas que cautivan usuarios."
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero />
    </SectionContainer>
    
    <div class="space-y-24">
      <SectionContainer id="servicios">
        <h2 class="flex items-center mb-6 text-h2 font-heading font-semibold gap-x-3 text-holy-text-primary">
          <CodeIcon class="size-8 text-holy-action" />
          Servicios
        </h2>
        <Services />
      </SectionContainer>

      <SectionContainer id="proyectos">
        <h2 class="flex items-center mb-6 text-h2 font-heading font-semibold gap-x-3 text-holy-text-primary">
          <Briefcase class="size-8 text-holy-action" />
          Proyectos
        </h2>
        <Projects />
      </SectionContainer>

      <SectionContainer id="agencia">
        <h2 class="flex items-center mb-6 text-h2 font-heading font-semibold gap-x-3 text-holy-text-primary">
          <ProfileCheck class="size-8 text-holy-action" />
          Sobre la agencia
        </h2>
        <AboutMe />
      </SectionContainer>

      <SectionContainer id="testimonios">
        <Testimonials />
      </SectionContainer>

      <SectionContainer id="contacto">
        <ContactForm />
      </SectionContainer>
    </div>
  </main>
</Layout>
