---
import Layout from "@/layouts/Layout.astro"

import AboutMe from "@/components/AboutMe.astro"
import Briefcase from "@/components/icons/Briefcase.astro"
import CodeIcon from "@/components/icons/Code.astro"
import Experience from "@/components/Experience.astro"
import ProfileCheck from "@/components/icons/ProfileCheck.astro"
import Projects from "@/components/Projects.astro"
import Services from "@/components/Services.astro"
import ContactForm from "@/components/ContactForm.astro"
import Testimonials from "@/components/Testimonials.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import Hero from "@/components/Hero.astro"
import SocialShare from "@/components/SocialShare.astro"
---

<Layout
  title="The Holy Code - Desarrollo Web y MVPs | México"
  description="Transformamos ideas en productos digitales exitosos. Desarrollo de MVPs, apps web y consultoría técnica en México y LATAM. ¡Hablemos de tu proyecto!"
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero />
    </SectionContainer>
    
    <div class="space-y-24">
      <SectionContainer id="servicios">
        <h2 class="flex items-center mb-6 text-h2 font-heading font-semibold gap-x-3 text-holy-text-primary">
          <CodeIcon class="size-8 text-holy-action" />
          Servicios de Desarrollo Web
        </h2>
        <Services />
      </SectionContainer>

      <SectionContainer id="proyectos">
        <h2 class="flex items-center mb-6 text-h2 font-heading font-semibold gap-x-3 text-holy-text-primary">
          <Briefcase class="size-8 text-holy-action" />
          Proyectos y Casos de Éxito
        </h2>
        <Projects />
      </SectionContainer>

      <SectionContainer id="agencia">
        <h2 class="flex items-center mb-6 text-h2 font-heading font-semibold gap-x-3 text-holy-text-primary">
          <ProfileCheck class="size-8 text-holy-action" />
          Nuestra Agencia
        </h2>
        <AboutMe />
      </SectionContainer>

      <SectionContainer id="testimonios">
        <Testimonials />
      </SectionContainer>

      <SectionContainer id="contacto">
        <ContactForm />
      </SectionContainer>

      <!-- Botones de compartir en redes sociales -->
      <SectionContainer class="py-12">
        <SocialShare className="bg-holy-card-bg backdrop-blur-md rounded-2xl p-8 border border-holy-border" />
      </SectionContainer>
    </div>
  </main>
</Layout>

<!-- Business Info avanzada -->
<meta name="business:contact_data:locality" content="Guadalajara" />
<meta name="business:contact_data:region" content="Jalisco" />

<!-- Performance optimizada -->
<meta name="HandheldFriendly" content="true" />
<meta name="format-detection" content="telephone=yes" />

<!-- Twitter Cards mejorados -->
<meta name="twitter:image:alt" content="..." />
<meta name="twitter:domain" content="holy-code.com" />
