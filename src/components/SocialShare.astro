---
interface Props {
  title?: string;
  description?: string;
  url?: string;
  className?: string;
}

const { 
  title = "The Holy Code - Desarrollo Web y MVPs",
  description = "Transformamos ideas en productos digitales exitosos",
  url = "https://holy-code.com",
  className = ""
} = Astro.props;
---

<div class={`social-share ${className}`}>
  <h3 class="text-lg font-heading font-semibold text-holy-text-primary mb-4 text-center">
    ðŸ“¢ Â¡Comparte nuestro trabajo!
  </h3>
  
  <div class="flex flex-wrap justify-center gap-3" role="group" aria-label="Compartir en redes sociales">
    <!-- Twitter/X -->
    <a 
      href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(url)}&via=holycode_dev`}
      target="_blank"
      rel="noopener noreferrer"
