      </svg>
      <span class="text-sm font-medium">WhatsApp</span>
    </a>
    
    <!-- Copiar enlace -->
    <button 
      id="copy-link"
      class="share-btn flex items-center gap-2 px-4 py-2 bg-holy-dark-secondary text-holy-text-primary rounded-lg hover:bg-holy-action/20 transition-colors border border-holy-border"
      data-platform="copy"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
      </svg>
      <span class="text-sm font-medium">Copiar</span>
    </button>
  </div>
</div>

<!-- Schema.org markup para widgets de redes sociales -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "The Holy Code",
  "url": "https://holy-code.com",
  "potentialAction": {
    "@type": "ShareAction",
    "target": [
      "https://twitter.com/intent/tweet",
      "https://www.facebook.com/sharer/sharer.php", 
      "https://www.linkedin.com/sharing/share-offsite/",
      "https://wa.me/"
    ]
  }
}
</script>

<script>
  // Solo mantener funcionalidad para copiar enlace
  document.addEventListener('DOMContentLoaded', function() {
    const shareUrl = window.location.href;
    
    // Los enlaces de redes sociales ahora son directos (enlaces <a>)
    // Solo mantenemos JavaScript para el botÃ³n de copiar
    
    // Copy link functionality
    const copyBtn = document.getElementById('copy-link');
    if (copyBtn) {
      copyBtn.addEventListener('click', async () => {
        try {
          await navigator.clipboard.writeText(shareUrl);
          
          // Visual feedback
          const originalContent = copyBtn.innerHTML;
          copyBtn.innerHTML = `
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-sm font-medium">Â¡Copiado!</span>
          `;
          copyBtn.classList.add('text-holy-action');
          
          setTimeout(() => {
            copyBtn.innerHTML = originalContent;
            copyBtn.classList.remove('text-holy-action');
          }, 2000);
        } catch (err) {
          console.error('Error al copiar enlace:', err);
          // Mostrar error visual
          copyBtn.classList.add('text-red-500');
          setTimeout(() => {
            copyBtn.classList.remove('text-red-500');
          }, 2000);
        }
      });
    }
  });
</script>

<style>
  .social-share {
    max-width: 500px;
    margin: 0 auto;
  }
  
  .share-btn {
    transition: all 0.2s ease;
    min-width: 100px;
  }
  
  .share-btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(40, 167, 69, 0.2);
  }
  
  .share-btn:active {
    transform: translateY(0);
  }
  
  @media (max-width: 640px) {
    .share-btn {
      min-width: 80px;
      padding: 0.5rem 0.75rem;
    }
    
    .share-btn span {
      font-size: 0.75rem;
    }
  }
</style> 