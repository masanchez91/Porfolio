      </svg>
      <span class="text-sm font-medium">Facebook</span>
    </a>
    
    <!-- LinkedIn -->
    <a 
      href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(url)}`}
      target="_blank"
      rel="noopener noreferrer"
      class="share-btn flex items-center gap-2 px-4 py-2 bg-holy-dark-secondary text-holy-text-primary rounded-lg hover:bg-holy-action/20 transition-colors border border-holy-border"
      aria-label="Compartir en LinkedIn"
