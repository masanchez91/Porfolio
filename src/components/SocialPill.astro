---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a
  class="inline-flex items-center justify-center gap-2 px-4 py-2 text-holy-text-primary bg-holy-action hover:bg-holy-action/90 transition-all duration-300 border border-holy-action rounded-full text-button font-semibold hover:scale-105 hover:shadow-lg hover:shadow-holy-action/25 glow-cta glow-button"
  href={href}
  target="_blank"
  rel="noopener noreferrer"
>
  <slot />
</a>
